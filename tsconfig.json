{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "sourceMap": true,
    "useUnknownInCatchVariables": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "strict": true,
    "strictNullChecks": true,
    "declaration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": [
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "pages/**/*.vue",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
